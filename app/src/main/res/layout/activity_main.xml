<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostblack"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_above="@id/outputtext"

        android:gravity="right"/>

    <TextView
        android:id="@+id/outputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text=""
        android:textColor="@color/white"
        android:layout_above="@id/l1"

        android:gravity="right"/>
<LinearLayout
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ac"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"

            android:backgroundTint="@color/black"
            android:text="AC"

            android:textSize="16sp" />
        <Button
            android:id="@+id/lb"

            android:layout_width="70dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black"
            android:text="("
            android:textSize="35dp"

            android:layout_marginLeft="25dp"
            />

        <Button
            android:id="@+id/rb"
            android:layout_width="70dp"
            android:layout_height="100dp"

            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text=")"
            android:textSize="35dp" />

        <Button
            android:id="@+id/divide"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="/"
            android:textSize="35dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="7"

            android:textSize="35dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="8"
            android:textSize="35dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="100dp"

            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="9"
            android:textSize="35dp" />

        <Button
            android:id="@+id/cross"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="X"
            android:textSize="35dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="4"

            android:textSize="35dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="5"
            android:textSize="35dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="100dp"

            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="6"
            android:textSize="35dp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="-"
            android:textSize="35dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="1"

            android:textSize="35dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="2"
            android:textSize="35dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="100dp"

            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="3"
            android:textSize="35dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="+"
            android:textSize="35dp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/black"
            android:text="0"
            android:visibility="invisible"
            android:textSize="35dp"
            android:layout_marginLeft="25dp"

            />

        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="0"
            android:textSize="35dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="70dp"
            android:layout_height="100dp"

            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"
            android:text="."
            android:textSize="35dp" />

        <Button
            android:id="@+id/equals"
            android:layout_width="70dp"
            android:layout_height="100dp"

            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/black"

            android:text="="
            android:textSize="35dp" />

    </LinearLayout>

</LinearLayout>


</RelativeLayout>

